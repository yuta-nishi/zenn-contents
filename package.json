{
  "name": "zenn-contents",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "lint:text": "textlint --ignore-path .gitignore '**/*.md'",
    "lint:text:fix": "textlint --fix --ignore-path .gitignore '**/*.md'",
    "lint:md": "markdownlint-cli2 '**/*.md'",
    "lint:md:fix": "markdownlint-cli2 --fix '**/*.md'",
    "lint": "pnpm lint:text && pnpm lint:md",
    "lint:fix": "pnpm lint:text:fix && pnpm lint:md:fix"
  },
  "devDependencies": {
    "@textlint-ja/textlint-rule-preset-ai-writing": "^1.6.1",
    "markdownlint-cli2": "^0.20.0",
    "textlint": "^15.5.0",
    "textlint-filter-rule-comments": "^1.2.2",
    "textlint-rule-preset-ja-spacing": "^2.3.0",
    "textlint-rule-preset-ja-technical-writing": "^12.0.2",
    "zenn-cli": "^0.3.0"
  }
}
